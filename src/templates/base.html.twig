<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %} Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <style>
            input,
            label {
                display: block;
            }
        </style>
    {% endblock %}

    {% block javascripts %}
        {# {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
</head>
<body>
{% block body %}
    {% block header %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href={{ path('/') }}>OurNews</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('news_index') }}">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('category_index') }}">Categories</a>
                        </li>
                    </ul>
                </div>
                {% if app.user %}
                <div class="navbar-nav me-2" >
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('profile', {'id': app.user.id}) }}">Profile</a>
                    </li>
                </div>
                {% else  %}
                <div class="navbar-nav me-2" >
                    <a class="nav-link active" href="{{ path('app_login') }}">Sign in</a>
                </div>
                {% endif %}
            </div>
        </nav>
    {% endblock %}
{% endblock %}
</body>
</html>
